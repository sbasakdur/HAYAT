@model IEnumerable<HayaTeknolojiCRM.Entities.Concreate.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="/Department/Create" class="btn btn-success" title="Create">
        CREATE
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "DepartmentDetail", new { id = item.DepartmentId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
